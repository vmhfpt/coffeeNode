<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-6">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 d-flex align-items-center">
                        <li class="breadcrumb-item"><a href="index.html" class="link"><i
                                    class="mdi mdi-home-outline fs-4"></i></a></li>
                        <li class="breadcrumb-item active" aria-current="page">Thêm banner</li>
                    </ol>
                </nav>
                <h1 class="mb-0 fw-bold">Thêm banner</h1>
            </div>

        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <!-- Row -->
        <div class="row">
            <!-- Column -->

            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-8 col-xlg-9 col-md-7">
                {{#if success}}
                <div class="alert alert-success">
                    <strong>Hoàn tất !</strong> {{ success}}.
                </div>
                {{/if}}
                <div class="card">
                    <div class="card-body">
                        <form method="POST" action="/admin/banner/add" class="form-horizontal form-material mx-2"
                            enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="col-md-12">Tên banner</label>
                                <div class="col-md-12">
                                    <input value="{{old_input.name}}" name="name" type="text" placeholder="Ưu đãi ..."
                                        class="form-control form-control-line">
                                </div>
                                {{#if arrError.name}}
                                <div class="alert alert-danger">
                                    <strong>Cảnh báo !</strong> {{arrError.name}}.
                                </div>
                                {{/if}}
                            </div>
                            <div class="form-group">
                                <label for="example-email" class="col-md-12">Mô tả</label>
                                <div class="col-md-12">
                                    <input value="{{old_input.description}}" type="text" placeholder="Mô tả"
                                        class="form-control form-control-line" name="description" id="example-email">
                                </div>
                                {{#if arrError.description}}
                                <div class="alert alert-danger">
                                    <strong>Cảnh báo !</strong> {{arrError.description}}.
                                </div>
                                {{/if}}
                            </div>
                               <div class="form-group">
                                <label for="example-email" class="col-md-12">Liên kết banner</label>
                                <div class="col-md-12">
                                    <input value="{{old_input.url}}" type="text" placeholder="http://"
                                        class="form-control form-control-line" name="url" id="example-email">
                                </div>
                                {{#if arrError.url}}
                                <div class="alert alert-danger">
                                    <strong>Cảnh báo !</strong> {{arrError.url}}.
                                </div>
                                {{/if}}
                            </div>
                         
                           
                            <div class="form-group">
                                <label for="example-email" class="col-md-12">Ảnh banner</label>
                                <div class="col-md-12">
                                    <input class="form-control customFile" type="file" id="formFile" name="thumb">
                                </div>
                                 {{#if arrError.thumb}}
                                <div class="alert alert-danger">
                                    <strong>Cảnh báo !</strong> {{arrError.thumb}}.
                                </div>
                                {{/if}}
                                <div id="img">
                                    <!--   <img id="result" src="" width="300" height="300"/> -->
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <button class="btn btn-success text-white">Thêm banner</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#img").empty();
                $("#img").append(`<br/> <img  src="${e.target.result}" width="100%" height="250"/>`);

            };
            reader.readAsDataURL(input.files[0]);
        }
    }
    $(document).ready(function () {
        $("#formFile").change(function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".customFile").addClass("selected").html(fileName);
            readURL(this);
        });
    }); 
</script>